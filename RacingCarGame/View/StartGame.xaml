        <Button Content="Let's go playing" HorizontalAlignment="Center" Margin="50,316,531,0" VerticalAlignment="Top" Width="128" Height="64" Background="Yellow" Grid.Column="1" Click="Button_Click_1"/>
        <Button Content="Exit" Grid.Column="1" HorizontalAlignment="Center" Margin="466,316,115,0" VerticalAlignment="Top" Width="128" Height="64" Background="Red" Click="Button_Click_2"/>



    </Grid>
</Window>

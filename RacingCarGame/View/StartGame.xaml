<Window x:Class="RacingCarGame.StartGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingCarGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Image Height="419" VerticalAlignment="Top" Margin="-106,0,-102,0" Grid.ColumnSpan="2" Source="b9c6aed13d452396e30c852cc0273989.jpg"  />
